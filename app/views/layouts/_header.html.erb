<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "course catalog", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="button"><%= link_to "Course",   courses_path %></li>
        <li><%= link_to "Instructor",   instructors_path %></li>
        <li><%= link_to "Subject", subjects_path %></li>
        <li><%= link_to "Search", search_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Enrolled", enrolled_course_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>

        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
