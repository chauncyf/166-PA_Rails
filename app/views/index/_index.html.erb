<p id="notice"><%= notice %></p>

<br>

<table class="table">
  <thead>  
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Enroll', "/enroll/#{course.id}", class: 'btn btn-primary', method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>


