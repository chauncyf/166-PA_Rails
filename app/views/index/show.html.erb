<h1>Results</h1>
<br>

<h5>"<%= @result_sum %>" Results about Course: "<%= @course_query %>" and Subject: "<%= @subject_name %>"</h5>

<table class="table">
  <thead>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.id %></td>
      <td><%= course.name %></td>
      <td><%= course.description %></td>
      <td><%= link_to 'Enroll', "/enroll/#{course.id}", class: 'btn btn-primary', method: :post %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<hr>
<%= link_to 'Back', 'javascript:history.back()', class: 'btn btn-primary' %>


