<%# <h1>Course Catalog</h1>
<p>Autor: Chenfeng Fan  <br> Email: fanc@brandeis.edu</p> %>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="course-tab" data-toggle="tab" href="#course" role="tab" aria-controls="course" aria-selected="true">Course</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="instructor-tab" data-toggle="tab" href="#instructor" role="tab" aria-controls="instructor" aria-selected="false">Instructor</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="subject-tab" data-toggle="tab" href="#subject" role="tab" aria-controls="subject" aria-selected="false">Subject</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <%# Course tab %>
  <div class="tab-pane show active" id="course" role="tabpanel" aria-labelledby="course-tab">
    <table class="table">
      <thead>
        <tr>
          <th>Code</th>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.id %></td>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <td><%= link_to 'Show', course %></td>
            <td><%= link_to 'Edit', edit_course_path(course) %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <a href=<%= new_course_path %> button type="button" class="btn btn-primary btn-block">New Course</a>
  </div>

  <%# Instructor tab %>
  <div class="tab-pane fade" id="instructor" role="tabpanel" aria-labelledby="instructor-tab">
    <table class="table">
      <thead>
        <tr>
          <th>First</th>
          <th>Middle</th>
          <th>Last</th>
          <th>Email</th>
          <th>Id</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @instructors.each do |instructor| %>
          <tr>
            <td><%= instructor.first %></td>
            <td><%= instructor.middle %></td>
            <td><%= instructor.last %></td>
            <td><%= instructor.email %></td>
            <td><%= instructor.id %></td>
            <td><%= link_to 'Show', instructor %></td>
            <td><%= link_to 'Edit', edit_instructor_path(instructor) %></td>
            <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <a href=<%= new_instructor_path %> button type="button" class="btn btn-primary btn-block">New Instructor</a>
  </div>

  <%# Subject tab %>
  <div class="tab-pane fade" id="subject" role="tabpanel" aria-labelledby="subject-tab">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Abbreviation</th>
          <th>Id</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.name %></td>
            <td><%= subject.abbreviation %></td>
            <td><%= subject.id %></td>
            <td><%= link_to 'Show', subject %></td>
            <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
            <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>

      </tbody>
    </table>
    <a href=<%= new_subject_path %> button type="button" class="btn btn-primary btn-block">New Subject</a>
  </div>
</div>